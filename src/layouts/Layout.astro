---
interface Props {
	title: string;
	favicon: string;
}

const { title, favicon } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta
			name="title"
			content="OwlByTech - Desarrollo de Software | Soluciones Tecnológicas Innovadoras"
		/>
		<meta
			name="description"
			content="Ofrecemos servicios de desarrollo de software personalizado para empresas. Soluciones tecnológicas innovadoras para impulsar tu negocio. ¡Contáctanos hoy!"
		/>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="http://owlbytech.com/" />
		<meta
			property="og:title"
			content="OwlByTech - Desarrollo de Software | Soluciones Tecnológicas Innovadoras"
		/>
		<meta
			property="og:description"
			content="Ofrecemos servicios de desarrollo de software personalizado para empresas. Soluciones tecnológicas innovadoras para impulsar tu negocio. ¡Contáctanos hoy!"
		/>
	
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="http://owlbytech.com/" />
		<meta
			property="twitter:title"
			content="OwlByTech - Desarrollo de Software | Soluciones Tecnológicas Innovadoras"
		/>
		<meta
			property="twitter:description"
			content="Ofrecemos servicios de desarrollo de software personalizado para empresas. Soluciones tecnológicas innovadoras para impulsar tu negocio. ¡Contáctanos hoy!"
		/>
		<meta
			property="twitter:image"
			content={favicon}
		/>

		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={favicon} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: Archivo, system-ui, sans-serif;
		background: #ffffff;
		background-image: url("/background-pattern.png");
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
